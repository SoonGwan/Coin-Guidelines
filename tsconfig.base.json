{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@coin-line/api-interfaces": [
        "libs/api-interfaces/src/index.ts"
      ],
      "@coin-line/component-ui": [
        "libs/component-ui/src/index.ts"
      ],
      "@coin-line/utils": [
        "libs/utils/src/index.ts"
      ],
      "@coin-line/api-util": [
        "libs/api-util/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}